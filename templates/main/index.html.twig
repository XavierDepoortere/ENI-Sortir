                                    </div>
                                    {{  form_widget(form.dateMin, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 px-6 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6','name': 'start' }}) }}
                                </div>
                                <span class="mx-4 text-gray-500">et</span>
                                <div class="relative">
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-6 pointer-events-none">
                                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                                            xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                            <path
                                                d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                                        </svg>
                                    </div>
                                    {{  form_widget(form.dateMax, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 px-6 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6','name': 'end' }}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="deux w-1/3 flex pl-20 pt-10 pb-2">
                    
                        <div>

                            <div class="relative flex gap-x-3 p-2">
                              <div>{{form_widget(form.organisateur)}}Sorties dont je suis organisateur</div>  
                            </div>
                            <div class="relative flex gap-x-3 p-2">
                                <div>{{form_widget(form.inscrit)}}Sorties auxquelles je suis inscrit/e</div>
                            </div>
                            <div class="relative flex gap-x-3 p-2">
                               <div>{{form_widget(form.nonInscrit)}} Sorties auxquelles je ne suis pas inscrit/e</div>
                            </div>
                            <div class="relative flex gap-x-3 p-2">
                                <div>{{form_widget(form.sortiePassee)}}Sorties passées</div>
                            </div>
                        </div>
                    </div>
                    <div class="trois w-1/3 flex items-center justify-center">
                    <button type="submit"
        class="rounded-md bg-indigo-600 px-12 py-8 text-lg font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Rechercher</button>
                    </div>
                </div>
            </fieldset>
        </div>

 {{ form_end(form)}}
    
    

<!--</form>-->
<!--liste-->




<div class="relative overflow-x-auto overflow-y-auto max-h-80 shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 sticky top-0">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nom de la sortie
                </th>
                <th scope="col" class="px-6 py-3">
                    Date de la sortie
                </th>
                <th scope="col" class="px-6 py-3">
                    Clôture
                </th>
                <th scope="col" class="px-6 py-3">
                    Inscrits/Places
                </th>
                <th scope="col" class="px-6 py-3">
                    Etat
                </th>
                <th scope="col" class="px-6 py-3">
                    Inscrit
                </th>
                <th scope="col" class="px-6 py-3">
                    Organisateur
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
{% for sortie in listeSorties %}
            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700 ">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{ sortie.nom }}
                </th>
                <td class="px-6 py-4">
                {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}
                </td>
                <td class="px-6 py-4">
                    {{ sortie.dateLimiteInscription|date('d/m/Y') }}
                </td>
                <td class="px-6 py-4">
                    {{ sortie.estInscrit|length }}/{{ sortie.nbInscriptionsMax }}
                </td>
                <td class="px-6 py-4">
                    {{ sortie.etats.libelle }}
                </td>
                <td class="px-6 py-4">
                    {{ app.user in sortie.estInscrit ? 'X' : '' }}
                </td>
                <td class="px-6 py-4">
                    <a href="{{ path('app_profil_view', { 'id':sortie.organisateur.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">{{ sortie.organisateur.prenom|capitalize }}.{{ sortie.organisateur.nom|slice(0, 1)|upper }}</a>
                </td>
                <td class="px-6 py-4">
                
                {% if sortie.etats.libelle != "Créée" %}
                    <a href="{{ path('app_sortie_detail', { 'id':sortie.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Afficher</a>
                {% endif %}
                {% if sortie.etats.libelle == "Créée" and app.user.id == sortie.organisateur.id %}
                    <a href="{{ path('app_sortie_modif', { 'id': sortie.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Modifier</a>
                {% endif %}
                {% if sortie.etats.libelle == "Ouverte" and app.user.id == sortie.organisateur.id %}
                    <a href="{{ path('app_sortie_delete', { 'id':sortie.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Annuler</a>
                {% endif %}
                {% if sortie.etats.libelle == "Ouverte" and app.user.id != sortie.organisateur.id and app.user not in sortie.estInscrit %}
                    <a href="{{ path('inscrire_sortie', { 'id': sortie.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">S'inscrire</a>
                {% endif %}
                {% if (sortie.etats.libelle == "Ouverte" or sortie.etats.libelle == "Clôturée") and app.user in sortie.estInscrit %}
                    <a href="{{ path('desistement_sortie', { 'id': sortie.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Se désister</a>
                {% endif %}
                    

                    
                     
                   
                    {# <a href="{{ path('app_profil_view', { 'id':sortie.organisateur.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Afficher</a>
                    <a href="{{ path('app_profil_view', { 'id':sortie.organisateur.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Afficher</a> #}
                </td>
            </tr>
            
{% endfor %}
        </tbody>
    </table>
</div>
<a href="{{ path('app_sortie_create') }}" class="inline-block px-8 py-4 mt-4 text-sm font-semibold text-white bg-indigo-600 rounded hover:bg-indigo-500 focus:bg-indigo-700 focus:outline-none focus-visible:ring focus-visible:ring-indigo-500 focus-visible:ring-opacity-50">Créer une sortie
  </a>
</div>
