{% block title %}{{ parent() }} | Home{% endblock %}

{% block body %}



<div class="mx-auto pt-6 pl-12 pr-12">
    <!--<form>-->
     {{ form_start(form)}}
        <div class="space-y-12">
            <fieldset>
                <legend class="text-lg font-bold leading-6 text-gray-90 pb-2">Filtrer les sorties</legend>
                <div class="flex border-b border-gray-900/10 pb-1 space-x-4">
                    <div class="un w-1/3 pl-6 pr-6 pb-4">
                        <div class="sm:col-span-3">
                            <label for="country"
                                class="block text-sm font-medium leading-6 text-gray-900 ">Campus</label>
                            <div class="mt-2 pb-3">
                               
   
   {{  form_widget(form.siteOrganisateur, {'attr': {'class':'block w-full rounded-md border-0 pl-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6'}})}}

