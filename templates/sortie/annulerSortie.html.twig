{% extends 'base.html.twig' %}

{% block title %} Annuler une sortie | {{ parent() }}{% endblock %}

{% block body %}
 {{ form_start(annulationForm) }}
    <div class="mt-5 container flex justify-center">
            <div class="space-y-12">
                <div class="border-b border-gray-900/10 pb-6">
                    <h1 class="text-base font-semibold leading-7 text-gray-900">Annuler une sortie</h1>
                </div>
                <div class="border-b border-gray-900/10 pb-2 flex">
                    <div class="droit"> 
                        <div class="block text-sm font-medium leading-6 text-gray-900 font-bold pb-5">Nom de la sortie : </div>       
                        
                        <div class="block text-sm font-medium leading-6 text-gray-900 font-bold pb-5">Date de la sortie : </div>
                        <div class="block text-sm font-medium leading-6 text-gray-900 font-bold pb-5">Campus :  </div>
                        <div class="block text-sm font-medium leading-6 text-gray-900 font-bold pb-5">Lieu : </div>
                        <label for="{{ annulationForm.infosSortie.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900 font-bold pb-5">Motif : </label>
                </div>
                <div class="gauche px-20 pb-5">
                    <div class="pb-5">{{ sortie.nom | capitalize }}</div>
                    <div class="pb-5">{{ sortie.dateHeureDebut | date('d/m/Y') }}</div>
                     <div class="pb-5">{{ sortie.siteOrganisateur.nom | capitalize }}</div>
                    <div class="pb-5">{{ sortie.lieu.nom | capitalize }} {{ sortie.lieu.rue | capitalize }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}</div>
                    <div class="pb-5">{{ form_row(annulationForm.infosSortie,{'attr': { 'label': false}}) }}</div>
                </div>


                        
                           
                            
                        </div>
                        <div class="mt-6 flex items-center px-20 justify-between gap-x-6">
                        <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Enregistrer</button>
                <button type="reset" class="text-sm font-semibold leading-6  text-gray-900">Annuler</button>
                
            </div>

 {{ form_end(annulationForm) }}
                </div>
            </div>
    </div>
{% endblock %}

