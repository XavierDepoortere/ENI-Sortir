{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}

    <div class="mt-5 container flex justify-center">
<section class="bg-blueGray-50">
<div class="w-full lg:w-12/12 px-4 mx-auto">
  <div class="relative flex flex-raw min-w-0 break-words bg-white  mb-6 shadow-xl rounded-lg mt-12 px-10">
    <div class="flexpx-6">
      <div class="flex flex-wrap justify-center">
        <div class="w-full px-4 flex justify-center">
          <div class="relative  rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px">
            <img alt="..." src="{{ asset('img/albatar.webp') }}" class="">
          </div>
        </div>
      </div>
      <div class="text-center mt-16 ">
        <h1 class="text-3xl font-bold leading-normal mb-2 text-blueGray-700 mb-2" style="letter-spacing: 0.1em;">
          {{participant.pseudo|capitalize }}
        </h1>
        <div class="flex justify-center">
        <div class="text-lg leading-normal mt-0 mb-2 text-blueGray-400 font-semibold mx-2">
          <span class="font-bold">Prénom : </span>{{participant.prenom|capitalize}}
        </div>
        <div class="text-lg leading-normal mt-0 mb-2 text-blueGray-400 font-semibold mx-2">
          <span class="font-bold">Nom : </span>{{participant.nom|capitalize}}
        </div></div>
        
        <div class="text-lg leading-normal mt-2 mb-2 text-blueGray-400 font-semibold">
          <span class="font-bold">Téléphone :  </span>{% if participant.telephone == null %}
            . . - . . - . . - . . - . .
          {% endif %}{{participant.telephone}}
        </div>
        <div class="text-lg leading-normal mt-2 mb-2 text-blueGray-400 font-semibold">
          <span class="font-bold">Email : </span>{{participant.email}}
        </div>
        <div class="text-lg leading-normal mt-2 mb-2 text-blueGray-400 font-semibold">
          <span class="font-bold">Campus : </span>{{participant.campus.nom|upper }}
          
        </div>
        
      </div>
      <div class="flex justify-center mx-10 mb-5">
  <a href="{{ path('app_main') }}" class="inline-block px-8 py-4 mt-4 text-sm font-semibold text-white bg-indigo-600 rounded hover:bg-indigo-500 focus:bg-indigo-700 focus:outline-none focus-visible:ring focus-visible:ring-indigo-500 focus-visible:ring-opacity-50">
    Retour
  </a>
</div>
    </div>
    
  </div>
  
</div>

</section>

</div>



{% endblock %}
